<ul class="nav nav-tabs">
  <li role="presentation" class="active"><%= link_to 'Profile', user_path(current_user.id) %></li>
  <li role="presentation"><%= link_to 'Listings', user_listings_path(current_user.id) %></li>
  <li role="presentation"><%= link_to 'Reservations', user_reservations_path(current_user.id) %></li>
</ul>


<% if flash[:success] || flash[:error]%>
	<div class="alert alert-success">
		<% flash.each do |key, value| %>
	      <div class="<%= flash_class(key) %>">
	            <%= value %>
	      </div>
		<% end %>
	</div>
<% end %>
<div class= "container">
	<div class="page-header">
		<h2>Profile</h1>
	</div>

	<p><%= "Name:     " + @user.first_name + @user.last_name %></p>	
	<p><%= "Email :   " + @user.email %></p>
	<%= link_to "Edit Profile", edit_user_path(current_user) %> 
</div>